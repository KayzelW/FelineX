<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:background="#DDEBFF"
              android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/icon1"
        android:contentDescription="Cats"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        />

    <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вход"
            android:textSize="30sp"
            android:textColor="#0F066D"
            android:fontFamily="sans-serif" />

    <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите свой логин и пароль!"
            android:textSize="14sp"
            android:textColor="#0F066D"
            android:layout_marginTop="8dp" />

    <LinearLayout
    
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
        <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Логин"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:inputType="textEmailAddress"
                android:backgroundTint="#BDD3FF"
                android:id="@+id/LoginForm_LoginEdit"/>
        <EditText
                android:password="true"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:inputType="textPassword"
                android:backgroundTint="#BDD3FF"
                android:id="@+id/LoginForm_PasswordEdit"/>

        <Button
                android:text="@string/LoginForm_AuthBtn"
                android:layout_width="200dp"
            android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:backgroundTint="#672C94"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:id="@+id/LoginForm_AuthBtn">
        </Button>

    </LinearLayout>
</LinearLayout>