@page "/Auth"
@using Shared.Extensions
@using WebApp.Services
@rendermode InteractiveServer
@inject NavigationManager nav

<div class="row d-flex justify-content-center h-100">
    <div class="col col-md-4 mb-4 mb-md-0 justify-content-center align-items-center">
        <div class="card mb-3 justify-content-center" style="border-radius: .5rem; border-color: #672C94; background-color: #EFF4FF; min-width: 500px;">
          <div class="row g-0">
            <div class="card-body p-5 text-center">
            
            
                <h2 style="color: #0F066D; font-style: oblique">Вход</h2>
                <p class="text-50 mb-5" style="color: #0F066D;: #0F066D; font-style: italic">Пожалуйста, введите свой логин и пароль!</p>
            
               <div class="container-md"></div>
                 <h4 class="form-label col-md-3" for="typeEmailX" style="color: #0F066D; font-style: oblique; font-size: large ">Логин</h4>
                <input type="email" id="typeEmailX" class="form-control form-control-lg"  aria-describedby="inputGroup-sizing-sm" placeholder=""
                                                   style="background-color: #EFF4FF; border-color: #EFF4FF; border-bottom-color: #BDD3FF; box-shadow: none;">
                <div class="row d-flex justify-content-center align-items-center" style="min-height: 40px"></div>
                <h4 class="form-label  col-md-3" for="typeEmailX" style="color: #0F066D; font-style: oblique; font-size: large">Пароль</h4>
                                <input type="password" id="typePasswordX" class="form-control form-control-lg"  aria-describedby="inputGroup-sizing-sm" placeholder=""
                                                                   style="background-color: #EFF4FF; border-color: #EFF4FF; border-bottom-color: #BDD3FF; box-shadow: none;">
                            
                
            
                <p class="small mb-5 pb-lg-2"><a class="text-black-50" href="#!">Забыли пароль?</a></p>
            
                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit" style="border-radius: .5rem; border-color: #00003A; background-color: #EFF4FF; --bs-btn-color: #00003A;" @onclick="User_auth">Войти</button>
                        
                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                  <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                  <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                  <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                </div>
            
              
            
              <div>
                <p class="mb-0">У вас нет аккаунта? <a href="#!" class="text-50 fw-bold" style="color: #0F066D;: #0F066D; font-style: italic">Зарегистрироваться</a>
                </p>
              </div>
              </div>
            </div>
        
          </div>
    
          </div>
      </div>              
        

    @code {

  private void User_auth()
  {
    Console.WriteLine("cringee");
    nav.NavigateTo($"/profile");
  }

}